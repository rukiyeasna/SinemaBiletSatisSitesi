    </ul>
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <h3></h3>
            <p>@Model.Explanation</p>
        </div>
        <div id="menu1" class="tab-pane fade">
            <h3></h3>
            <video src="@Model.Trailer" controls autoplay></video>
        </div>
        <div id="menu2" class="tab-pane fade ">
            <h3></h3>
            <p>Some dckshbgku</p>
        </div>
    </div>

</div>



