@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<link href="~/bootswatch/bootstrap.min.css" rel="stylesheet" />
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div id="formdiv">
    <form asp-action="Index" method="post" class="w-75 p-3">
        <h3><i class="fas fa-user-circle mr-2"></i>Üyelik Bilgilerim</h3>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <span asp-validation-for="Surname"></span>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" class="form-control" />
        </div>


        <button type="submit" class="btn btn-primary btn-sm">Güncelle</button>

    </form>
</div>

<script src="~/Template/startbootstrap-simple-sidebar-gh-pages/vendor/jquery/jquery.min.js"></script>
<script src="~/Template/startbootstrap-simple-sidebar-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/fontAwesome/js/all.min.js"></script>


<div id="solmenu">
    <a asp-action="Index" asp-controller="Profile"><div class="solmenuyazi">Bilgilerim</div></a>
    <a asp-action="Ticket" asp-controller="Profile"><div class="solmenuyazi">Biletlerim</div></a>
    <a asp-area="" asp-action="CikisYap" asp-controller="Home"><div class="solmenuyazi">Çıkış</div></a>
</div>

