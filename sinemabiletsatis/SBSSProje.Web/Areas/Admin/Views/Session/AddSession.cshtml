<form asp-action="AddSession" class="w-75 mx-auto p-3" method="post">
    <h4>SEANS EKLEME</h4>
    <br />
    <div class="form-group">
        <label>Filmi Seçiniz</label>
        <span asp-validation-for="MovieId" class="text-danger"></span>
        <select class="form-control" asp-for="MovieId" asp-items=" ViewBag.Movies">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label>Şube Seçiniz</label>
        <span asp-validation-for="BranchId" class="text-danger"></span>
        <select class="form-control" asp-for="BranchId" asp-items=" ViewBag.Branches">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label>Salon Seçiniz</label>
        <span asp-validation-for="HallId" class="text-danger"></span>
        <select class="form-control" asp-for="HallId" asp-items=" ViewBag.Halls">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <span asp-validation-for="Date" class="text-danger"></span>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Saat</label>
        <span asp-validation-for="Hour" class="text-danger"></span>
        <input asp-for="Hour" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>

</form>

