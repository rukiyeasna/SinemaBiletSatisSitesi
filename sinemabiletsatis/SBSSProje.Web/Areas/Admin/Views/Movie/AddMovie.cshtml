@model MovieAddViewModel
@{
    ViewData["Title"] = "AddMovie";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post" enctype="multipart/form-data">
    <h4><strong>FİLM EKLEME</strong></h4>
    <br />
    <input type="hidden" asp-for="MovieId" />
    <div class="form-group">
        <label asp-for="MovieName"></label>
        <span asp-validation-for="MovieName" class="text-danger"></span>
        <input asp-for="MovieName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <span asp-validation-for="Director" class="text-danger"></span>
        <input asp-for="Director" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cast"></label>
        <span asp-validation-for="Cast" class="text-danger"></span>
        <input asp-for="Cast" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <span asp-validation-for="Time" class="text-danger"></span>
        <input asp-for="Time" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <span asp-validation-for="Type" class="text-danger"></span>
        <input asp-for="Type" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Explanation"></label>
        <span asp-validation-for="Explanation" class="text-danger"></span>
        <textarea asp-for="Explanation" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Fragman</label>
        <span asp-validation-for="Trailer" class="text-danger"></span>
        <input asp-for="Trailer" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" class="text-danger"></span>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ResimDosyasi"></label>
        <span asp-validation-for="ResimDosyasi" class="text-danger"></span>
        <input asp-for="ResimDosyasi" class="form-control" />
    </div>

    @*<button asp-route-id="@Model.FilmId" asp-action="Index" asp-controller="FilmBilgileri" type="submit" class="btn btn-warning">Şube Seçimi</button><br />
        <button type="submit" class="btn btn-warning  mt-2">Salon Seçimi</button><br />
        <button type="submit" class="btn btn-warning  mt-2">Seans Seçimi</button><br />*@
    <button type="submit" class="btn btn-primary btn-sm mt-4">Kaydet</button>
</form>

@section JavaScript{
    <script src="~/lib/jquery/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}


