@model BranchListViewModel 
@{
    ViewData["Title"] = "UpdateBranch";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateBranch" class="w-75 mx-auto p-3" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BranchId" />
    <div class="form-group">
        <label asp-for="BranchName"></label>
        <span asp-validation-for="BranchName" class="text-danger"></span>
        <input asp-for="BranchName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <span asp-validation-for="City" class="text-danger"></span>
        <input asp-for="City" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <span asp-validation-for="Address" class="text-danger"></span>
        <input asp-for="Address" type="text" class="form-control" />
    </div>
   
    <button asp-action="Index" asp-controller="Branch" class="btn btn-warning btn-sm"><i class="fas fa-check mr-2"></i>Vazgeç</button>
    <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>

</form>

