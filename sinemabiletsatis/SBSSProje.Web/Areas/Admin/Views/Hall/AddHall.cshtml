@model HallAddViewModel
@{
    ViewData["Title"] = "AddHall";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="AddHall" class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label>Salon Adı</label>
        <span asp-validation-for="HallName" class="text-danger"></span>
        <input asp-for="HallName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şube Seçiniz</label>
        <span asp-validation-for="BranchId" class="text-danger"></span>
        <select class="form-control" asp-for="BranchId" asp-items=" ViewBag.Branches">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>

</form>

@section JavaScript{
    <script src="~/lib/jquery/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

