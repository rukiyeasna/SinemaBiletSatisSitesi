@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="Index" method="post" class="w-50 p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname"></span>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şuan ki resminiz</h5>
                    <img src="~/img/@Model.Picture" class="w-100" width="100" height="100" style="height:10rem!important;" alt="@Model.Name">
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz resim:</h5>
                    <img src="" id="resimOnizleme" class="w-100" style="height:10rem!important;" />
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-12">
                <label>Resim Seç:</label>
                <input type="file" class="form-control-file" name="resim" id="Resim" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-sm mt-2"><i class="fas fa-check mr-2"></i>Kaydet</button>

</form>

@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}


